@model ICollection<Service>
@{
    int count = 0;
}
<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service Table</h4>
            <a asp-action="Create" asp-controller="Service" class="btn btn-primary">Create</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Amunt</th>
                            <th>Sub-Title</th>
                            <th>Icon</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td>@item.SubTitle</td>
                                <td>@item.Icon</td>
                                <td>
                                    <a asp-action="Update" asp-controller="Service" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                    <a asp-action="Delete" asp-controller="Service" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>