@model UpdateServiceVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Service</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubTitle">Sub-Title</label>
                    <input asp-for="SubTitle" class="form-control" placeholder="SubTitle">
                    <span asp-validation-for="SubTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Icon">Icon</label>
                    <input asp-for="Icon" class="form-control" placeholder="Icon">
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a class="btn btn-light" asp-action="Index" asp-controller="Service">Cancel</a>
            </form>
        </div>
    </div>
</div>